---
export interface Props {
  id: number;
  name: string;
  description: string;
  url: string;
  repo: string;
  icon: string;
}

const { id, name, description, url, repo, icon } = Astro.props;
---

<div
  id={`item-${id}`}
  class="item relative mt-4 mb-8 flex w-80 flex-col rounded-xl bg-slate-100 bg-clip-border text-gray-700 shadow-md"
>
  <div class="mx-4 -mt-6 h-40 overflow-hidden rounded-xl">
    <a href={url}>
      <img src={icon} alt="" class="w-full h-full object-cover" />
    </a>
  </div>
  <div class="p-6">
    <h5
      class="mb-2 block font-sans text-xl font-semibold leading-snug tracking-normal text-blue-gray-900 antialiased"
    >
      {name}
    </h5>
    <p
      class="block font-sans text-base font-light leading-relaxed text-inherit antialiased"
    >
      {description}
    </p>
  </div>
  <div class="p-6 pt-0">
    <button
      data-ripple-light="true"
      type="button"
      class="flex items-center py-4 text-sm font-medium px-7 bg-slate-100 text-slate-700 hover:bg-slate-200 hover:text-slate-900 transition duration-300 rounded-2xl drop-shadow-md"
    >
      <a href={repo}>Link al repo</a>
    </button>
  </div>
</div>
