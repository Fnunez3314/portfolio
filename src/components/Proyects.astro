---
import data from "../data/data.json";
import ProyectsCard from "./ProyectsCard.astro";
---

<div
  class="flex flex-col gap-8 py-12 2xl:py-16 max-w-screen-2xl m-auto w-full px-3 sm:px-8 lg:px-16 xl:px-32"
>
  <h3
    class="flex justify-center text-4xl font-semibold tracking-tight sm:max-md:text-center"
  >
    Proyectos
  </h3>
  <div
    id="section4"
    class="grid w-full grid-flow-row gap-x-0 gap-y-6 sm:max-md:justify-items-center justify-items-center md:grid-cols-2 md:justify-items-center md:gap-6"
  >
    {
      data.map((item) => (
        <ProyectsCard
          id={item.id}
          name={item.name}
          description={item.description}
          url={item.url}
          repo={item.repo}
          icon={item.icon}
        />
      ))
    }
  </div>
</div>
